    <script is:inline>
        // --- 1. Product Filtering Logic (Fixed White Button Issue) ---
        window.filterProducts = function(targetCategoryId) {
            console.log('Filtering by:', targetCategoryId);
            
            const productCards = document.querySelectorAll('.product-card');
            const filterButtons = document.querySelectorAll('.filter-btn');
            const noProductsMessage = document.getElementById('no-products');
            
            // Define styles for Active and Inactive states
            const activeClasses = ['bg-stone-900', 'text-white', 'border-stone-900'];
            const inactiveClasses = ['bg-white', 'text-stone-600', 'border-stone-200', 'hover:bg-stone-50'];

            // A. Update Active Button State
            filterButtons.forEach(btn => {
                const btnId = btn.getAttribute('data-id');
                
                if (btnId === targetCategoryId) {
                    // Make Active
                    btn.classList.add(...activeClasses);
                    btn.classList.remove(...inactiveClasses);
                } else {
                    // Make Inactive
                    btn.classList.add(...inactiveClasses);
                    btn.classList.remove(...activeClasses);
                }
            });
            
            let visibleCount = 0;
            
            // B. Show/Hide Cards
            productCards.forEach(card => {
                const cardCategory = card.getAttribute('data-category');
                
                // Reset animation
                card.classList.remove('fade-in-up');
                void card.offsetWidth; // Trigger reflow

                if (targetCategoryId === 'all' || cardCategory === targetCategoryId) {
                    card.classList.remove('hidden');
                    card.classList.add('fade-in-up'); 
                    visibleCount++;
                } else {
                    card.classList.add('hidden');
                }
            });
            
            // C. Empty State
            if (visibleCount === 0 && noProductsMessage) {
                noProductsMessage.classList.remove('hidden');
            } else if (noProductsMessage) {
                noProductsMessage.classList.add('hidden');
            }
        }
        
        // --- 2. Mobile Menu Logic ---
        document.addEventListener('DOMContentLoaded', function() {
            const btn = document.getElementById('mobile-menu-btn');
            const menu = document.getElementById('mobile-menu');
            
            if(btn && menu) {
                btn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    menu.classList.toggle('hidden');
                });
                document.addEventListener('click', (e) => {
                    if (!menu.contains(e.target) && !btn.contains(e.target)) {
                        menu.classList.add('hidden');
                    }
                });
            }
        });
    </script>
