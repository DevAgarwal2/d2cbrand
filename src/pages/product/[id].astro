---
import Layout from '../../layouts/Layout.astro';
import logo from "../../assets/logo.jpeg"; 
// ðŸ‘‡ 1. Import Supabase
import { supabase } from "../../db/supabase";

// ðŸ‘‡ 2. Get the ID from the URL (Live, no build needed)
const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/404');
}

// ðŸ‘‡ 3. Fetch the Specific Product
const { data: rawProduct, error } = await supabase
  .from('products')
  .select('*, categories(name)')
  .eq('id', id)
  .single();

if (error || !rawProduct) {
  console.error("Product not found or error:", error);
  return Astro.redirect('/404');
}

// ðŸ‘‡ 4. Map DB fields to your UI variables
const product = {
  ...rawProduct,
  // Map DB 'image_url' to UI 'image'
  image: rawProduct.image_url,
  // Map DB 'price' directly to UI 'originalPrice' (as requested)
  originalPrice: rawProduct.price.toString().startsWith('â‚¹') ? rawProduct.price : `â‚¹${rawProduct.price}`,
  // Map category name from join
  categoryName: rawProduct.categories?.name || 'Handicraft',
  // Ensure features/images are arrays (Supabase JSONB comes as array automatically)
  features: rawProduct.features || [],
  images: rawProduct.images || [],
  // Size variants
  has_sizes: rawProduct.has_sizes || false,
  size_variants: rawProduct.size_variants || []
};

// ðŸ‘‡ 5. Fetch Related Products (Same category, different ID)
const { data: relatedRaw } = await supabase
  .from('products')
  .select('*')
  .eq('category_id', rawProduct.category_id) // Match category
  .neq('id', id) // Exclude current product
  .limit(3); // Limit to 3

const relatedProducts = relatedRaw?.map(p => ({
  id: p.id,
  title: p.title,
  image: p.image_url,
  originalPrice: p.price.toString().startsWith('â‚¹') ? p.price : `â‚¹${p.price}`
})) || [];

// Base message for WhatsApp
const baseMessage = `Hi Shreeyam Handicrafts, I am interested in the ${product.title}.`;
