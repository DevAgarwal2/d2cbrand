            // Build message with size and features if applicable
            let fullMessage = baseMessage;
            if (selectedSize && selectedPrice) {
                fullMessage += `\nSize: ${selectedSize}\nPrice: â‚¹${selectedPrice}`;
                if (selectedFeatures && selectedFeatures.length > 0) {
                    fullMessage += '\nFeatures:';
                    selectedFeatures.forEach(feature => {
                        fullMessage += `\nâ€¢ ${feature}`;
                    });
                }
            } else {
                const priceText = document.getElementById('price-display')?.textContent || '';
                fullMessage += `\nPrice: ${priceText}`;
            }
            fullMessage += `\n\nProduct Link: ${currentUrl}`;

            const whatsappUrl = `https://wa.me/919726983835?text=${encodeURIComponent(fullMessage)}`;
            window.open(whatsappUrl, '_blank');
        });
    });
