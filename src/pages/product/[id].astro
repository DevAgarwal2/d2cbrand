<script is:inline>
  // Image Switcher
  window.changeImage = function(src, btn) {
    const mainImage = document.getElementById('main-image');
    mainImage.style.opacity = '0.7';
    setTimeout(() => {
      mainImage.src = src;
      mainImage.style.opacity = '1';
    }, 200);

    document.querySelectorAll('.thumbnail').forEach(t => t.classList.remove('border-stone-900'));
    btn.classList.add('border-stone-900');
  }

  // Mobile Menu
  document.addEventListener('DOMContentLoaded', () => {
    // 1. Mobile Menu Logic
    const btn = document.getElementById('mobile-menu-btn');
    const menu = document.getElementById('mobile-menu');
    if(btn && menu) {
        btn.addEventListener('click', () => menu.classList.toggle('hidden'));
    }

    // 2. Size Selector Logic
    let selectedSize = null;
    let selectedPrice = null;
    let selectedFeatures = [];
    const sizeButtons = document.querySelectorAll('.size-option');
    const priceDisplay = document.getElementById('price-display');
    const sizeError = document.getElementById('size-error');
    const mobilePriceDisplay = document.querySelector('.fixed.bottom-0 .text-xl.font-serif');
    const featuresList = document.getElementById('size-features-list');
    const sizeNameDisplay = document.getElementById('selected-size-name');
    const sizeFeaturesContainer = document.getElementById('size-features-container');

    function updateFeatures(features) {
        if (featuresList && features) {
            featuresList.innerHTML = features.map(feature => `
                <li class="flex items-start gap-3 text-stone-700">
                    <span class="mt-1.5 w-1.5 h-1.5 rounded-full bg-stone-400 flex-shrink-0"></span>
                    <span>${feature}</span>
                </li>
            `).join('');
        }
    }

    if (sizeButtons.length > 0) {
        sizeButtons.forEach(button => {
            button.addEventListener('click', () => {
                // Remove active class from all
                sizeButtons.forEach(b => {
                    b.classList.remove('border-stone-900', 'bg-stone-900', 'text-white');
                    b.classList.add('border-stone-200', 'text-stone-700');
                });

                // Add active class to clicked
                button.classList.remove('border-stone-200', 'text-stone-700');
                button.classList.add('border-stone-900', 'bg-stone-900', 'text-white');

                // Update selected size, price and features
                selectedSize = button.getAttribute('data-size');
                selectedPrice = button.getAttribute('data-price');
                selectedFeatures = JSON.parse(button.getAttribute('data-features') || '[]');

                // Update and show price display
                if (priceDisplay) {
                    priceDisplay.textContent = 'â‚¹' + selectedPrice;
                    priceDisplay.classList.remove('hidden');
                }

                // Update mobile price display
                if (mobilePriceDisplay) {
                    mobilePriceDisplay.textContent = 'â‚¹' + selectedPrice;
                }

                // Update and show size name
                if (sizeNameDisplay) {
                    sizeNameDisplay.textContent = selectedSize;
                    sizeNameDisplay.classList.remove('hidden');
                }

                // Show and update features
                if (sizeFeaturesContainer) {
                    sizeFeaturesContainer.classList.remove('hidden');
                }
                updateFeatures(selectedFeatures);

                // Hide error
                if (sizeError) {
                    sizeError.classList.add('hidden');
                }
            });
        });
    }
    }

    if (sizeButtons.length > 0) {
        // Select first size by default
        const firstSize = sizeButtons[0];
        selectedSize = firstSize.getAttribute('data-size');
        selectedPrice = firstSize.getAttribute('data-price');
        selectedFeatures = JSON.parse(firstSize.getAttribute('data-features') || '[]');
        updateFeatures(selectedFeatures);

