---
import Layout from '../../layouts/Layout.astro';
import { products } from '../../data/products.js';

export function getStaticPaths() {
  return products.map((product) => ({
    params: { id: product.id },
    props: { product },
  }));
}

const { product } = Astro.props;

if (!product) {
  return Astro.redirect('/404');
}

// Get related products from same category
const relatedProducts = products
  .filter(p => p.category === product.category && p.id !== product.id)
  .slice(0, 3);
---

<Layout title={product.title} description={product.description}>
  <!-- Breadcrumb Navigation -->
  <nav class="bg-neutral-50 py-4 sticky top-0 z-40">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center space-x-2 text-sm">
        <a href="/" class="text-primary-600 hover:text-primary-700">Home</a>
        <span class="text-neutral-400">‚Üí</span>
        <a href="/#products" class="text-primary-600 hover:text-primary-700">Products</a>
        <span class="text-neutral-400">‚Üí</span>
        <span class="text-neutral-600">{product.categoryName}</span>
        <span class="text-neutral-400">‚Üí</span>
        <span class="text-neutral-800 font-medium">{product.title}</span>
      </div>
    </div>
  </nav>

  <!-- Product Details -->
  <section class="py-8 lg:py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Product Images -->
        <div>
          <!-- Main Image -->
          <div class="bg-neutral-50 rounded-2xl overflow-hidden mb-4">
            <img 
              id="main-image"
              src={product.image} 
              alt={product.title}
              class="w-full h-96 lg:h-[500px] object-cover"
            />
          </div>
          
          <!-- Image Thumbnails -->
          {product.images && product.images.length > 1 && (
            <div class="grid grid-cols-4 gap-3">
              {product.images.map((img, index) => (
                <button 
                  class="thumbnail bg-neutral-50 rounded-lg overflow-hidden border-2 border-transparent hover:border-primary-500 transition-colors"
                  onclick={`document.getElementById('main-image').src = '${img}'`}
                >
                  <img 
                    src={img} 
                    alt={`${product.title} view ${index + 1}`}
                    class="w-full h-20 object-cover"
                  />
                </button>
              ))}
            </div>
          )}
        </div>

        <!-- Product Info -->
        <div class="space-y-6">
          <!-- Category Badge -->
          <div class="flex items-center gap-2">
            <span class="bg-primary-100 text-primary-700 px-3 py-1 rounded-full text-sm font-medium">
              {product.categoryName}
            </span>
            {product.inStock && (
              <span class="bg-green-100 text-green-700 px-3 py-1 rounded-full text-sm font-medium">
                ‚úì In Stock
              </span>
            )}
            {product.fastDelivery && (
              <span class="bg-blue-100 text-blue-700 px-3 py-1 rounded-full text-sm font-medium">
                üöö Fast Delivery
              </span>
            )}
          </div>

          <!-- Title -->
          <h1 class="text-3xl lg:text-4xl font-bold text-neutral-800 font-playfair leading-tight">
            {product.title}
          </h1>

          <!-- Rating and Reviews -->
          <div class="flex items-center gap-4">
            <div class="flex items-center gap-2">
              <div class="flex text-yellow-400">
                {'‚≠ê'.repeat(Math.floor(product.rating))}
              </div>
              <span class="text-lg font-semibold text-neutral-700">{product.rating}</span>
            </div>
            <span class="text-neutral-600">({product.reviews} reviews)</span>
          </div>

          <!-- Price -->
          <div class="space-y-2">
            <div class="flex items-center gap-4">
              <span class="text-4xl font-bold text-primary-600">{product.price}</span>
              {product.originalPrice && (
                <span class="text-2xl text-neutral-400 line-through">{product.originalPrice}</span>
              )}
            </div>
            {product.discount && (
              <div class="inline-block bg-red-100 text-red-700 px-3 py-1 rounded-full text-sm font-medium">
                Save {product.discount}
              </div>
            )}
          </div>

          <!-- WhatsApp Contact -->
          <div class="space-y-4 pt-4 border-t border-neutral-200">
            <h3 class="text-lg font-semibold text-neutral-800">Get in Touch</h3>
            <button class="w-full bg-green-500 hover:bg-green-600 text-white py-4 px-6 rounded-xl font-semibold transition-all duration-200 flex items-center justify-center gap-3 transform hover:scale-[1.02] shadow-lg hover:shadow-xl">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
