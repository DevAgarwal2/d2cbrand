              </svg>
              <span class="text-lg">WhatsApp Us - Instant Response</span>
            </button>
            <p class="text-sm text-neutral-600 text-center">üí¨ Quick response guaranteed within 30 minutes</p>
          </div>

          <!-- Description -->
          <div>
            <h3 class="text-xl font-semibold text-neutral-800 mb-3">Description</h3>
            <p class="text-lg text-neutral-600 leading-relaxed">{product.description}</p>
          </div>

          <!-- Features -->
          {product.features && (
            <div>
              <h3 class="text-xl font-semibold text-neutral-800 mb-3">Features</h3>
              <ul class="space-y-2">
                {product.features.map((feature) => (
                  <li class="flex items-center gap-3 text-neutral-600">
                    <span class="text-green-600 font-bold">‚úì</span>
                    <span class="text-lg">{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}


          <!-- Additional Info -->
          <div class="bg-neutral-50 p-6 rounded-xl space-y-4">
            <h3 class="text-lg font-semibold text-neutral-800">Product Information</h3>
            <div class="grid grid-cols-2 gap-4 text-sm">
              <div>
                <span class="text-neutral-600">Category:</span>
                <span class="ml-2 font-medium text-neutral-800">{product.categoryName}</span>
              </div>
              <div>
                <span class="text-neutral-600">Availability:</span>
                <span class="ml-2 font-medium text-green-600">
                  {product.inStock ? 'In Stock' : 'Out of Stock'}
                </span>
              </div>
              <div>
                <span class="text-neutral-600">Delivery:</span>
                <span class="ml-2 font-medium text-neutral-800">
                  {product.fastDelivery ? '2-3 days' : '5-7 days'}
                </span>
              </div>
              <div>
                <span class="text-neutral-600">Rating:</span>
                <span class="ml-2 font-medium text-neutral-800">{product.rating}/5.0</span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Related Products -->
      {relatedProducts.length > 0 && (
        <div class="mt-16 lg:mt-24">
          <h2 class="text-3xl font-bold text-neutral-800 font-playfair mb-8">
            Related Products
          </h2>
          
          <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8">
            {relatedProducts.map((relatedProduct) => (
              <div class="bg-white rounded-2xl shadow-sm border border-neutral-100 overflow-hidden hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
                <div class="relative">
                  <img 
                    src={relatedProduct.image} 
                    alt={relatedProduct.title}
                    class="w-full h-64 object-cover"
                    loading="lazy"
                  />
                  {relatedProduct.discount && (
                    <div class="absolute top-3 left-3 bg-red-500 text-white px-2 py-1 rounded-md text-sm font-medium">
                      {relatedProduct.discount}
                    </div>
                  )}
                </div>
                
                <div class="p-6">
                  <div class="flex items-center gap-2 mb-2">
                    <span class="text-sm text-neutral-500 bg-neutral-100 px-2 py-1 rounded-md">{relatedProduct.categoryName}</span>
                    <div class="flex items-center gap-1">
                      <span class="text-yellow-400">‚≠ê</span>
                      <span class="text-sm text-neutral-600">{relatedProduct.rating}</span>
                    </div>
                  </div>
                  
                  <h3 class="text-lg font-semibold text-neutral-800 mb-3 line-clamp-2 leading-tight">
                    {relatedProduct.title}
                  </h3>
                  
                  <div class="flex items-center gap-3 mb-4">
                    <span class="text-2xl font-bold text-primary-600">{relatedProduct.price}</span>
                    {relatedProduct.originalPrice && (
                      <span class="text-lg text-neutral-400 line-through">{relatedProduct.originalPrice}</span>
                    )}
                  </div>
                  
                  <button 
                    onclick={`window.location.href='/product/${relatedProduct.id}'`}
                    class="w-full bg-primary-600 hover:bg-primary-700 text-white py-3 rounded-lg font-semibold transition-colors duration-200"
                  >
                    View Details
                  </button>
                </div>
              </div>
            ))}
          </div>
        </div>
      )}
    </div>
  </section>

  <!-- Fixed Bottom Bar for Mobile -->
  
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* Add padding bottom for mobile fixed bar */
  @media (max-width: 768px) {
    body {
      padding-bottom: 80px;
    }
  }
</style>

<script>
  // Image gallery functionality
  document.addEventListener('DOMContentLoaded', function() {
    const thumbnails = document.querySelectorAll('.thumbnail');
    const mainImage = document.getElementById('main-image');
    
    thumbnails.forEach((thumbnail, index) => {
      thumbnail.addEventListener('click', function() {
        // Remove active state from all thumbnails
        thumbnails.forEach(t => t.classList.remove('border-primary-500'));
        // Add active state to clicked thumbnail
        this.classList.add('border-primary-500');
      });
    });
    
    // Set first thumbnail as active by default
    if (thumbnails.length > 0) {
      thumbnails[0].classList.add('border-primary-500');
    }
  });
</script>

