                // Add active class to clicked
                button.classList.remove('border-stone-200', 'text-stone-700');
                button.classList.add('border-stone-900', 'bg-stone-900', 'text-white');

                // Update selected size, price and features
                selectedSize = button.getAttribute('data-size');
                selectedPrice = button.getAttribute('data-price');
                selectedFeatures = JSON.parse(button.getAttribute('data-features') || '[]');

                // Update price display
                if (priceDisplay) {
                    priceDisplay.textContent = 'â‚¹' + selectedPrice;
                }

                // Update mobile price display
                if (mobilePriceDisplay) {
                    mobilePriceDisplay.textContent = 'â‚¹' + selectedPrice;
                }

                // Update size name
                const sizeNameDisplay = document.getElementById('selected-size-name');
                if (sizeNameDisplay) {
                    sizeNameDisplay.textContent = selectedSize;
                }

                // Update features
                updateFeatures(selectedFeatures);

                // Hide error
                if (sizeError) {
                    sizeError.classList.add('hidden');
